FROM php:8.3-fpm

# Replace shell with bash so we can source files
RUN rm /bin/sh && ln -s /bin/bash /bin/sh
# Set debconf to run non-interactively
RUN echo 'debconf debconf/frontend select Noninteractive' | debconf-set-selections

# Set working directory
RUN mkdir -p /var/www/laravel 
RUN chown -R www-data:www-data /var/www/laravel
WORKDIR /var/www/laravel

# Install dependencies
RUN apt-get update && apt-get -y upgrade && apt-get install -y \
    build-essential \
    mariadb-client \
    libpng-dev \
    libjpeg62-turbo-dev \
    libfreetype6-dev \
    locales \
    libzip-dev \
    zip \
    jpegoptim optipng pngquant gifsicle \
    vim \
    unzip \
    git \
    curl \
    libxml2-dev \
    libonig-dev \
    supervisor \
    python3.6 \
    python3-venv \
    python3-pip \
    default-libmysqlclient-dev

# Clear cache
RUN apt-get clean && rm -rf /var/lib/apt/lists/*

#COPY extensions/linux64-php7.4/bolt.so /usr/local/lib/php/extensions/bolt.so

# Install extensions
RUN docker-php-ext-install pdo_mysql mbstring zip exif pcntl xml
RUN docker-php-ext-configure gd --with-freetype=/usr/include --with-jpeg=/usr/include
RUN docker-php-ext-install gd
RUN pecl install xdebug
RUN echo 'xdebug.mode=coverage' >> /usr/local/etc/php/conf.d/xdebug.ini

#Install & run composer
RUN php -r "copy('https://getcomposer.org/installer', 'composer-setup.php');" \
   && php composer-setup.php \
   && php -r "unlink('composer-setup.php');" \
   && mv composer.phar /usr/local/bin/composer      

COPY ./ /var/www/laravel/
RUN rm /var/www/laravel/wrapper.sh
COPY wrapper.sh /wrapper.sh
RUN chmod +x /wrapper.sh
RUN mkdir -p /var/www/laravel/storage/framework/{sessions,views,cache}
RUN chown -R www-data /var/www/laravel/bootstrap/cache 
RUN COMPOSER_MEMORY_LIMIT=-1 composer install
RUN COMPOSER_MEMORY_LIMIT=-1 composer update


# Install latest node LTS version
ENV NVM_DIR /usr/local/nvm
ENV NODE_VERSION 18.0.0
RUN mkdir -p /usr/local/nvm

RUN curl https://raw.githubusercontent.com/creationix/nvm/v0.39.2/install.sh | bash \
    && . $NVM_DIR/nvm.sh \
    && nvm install $NODE_VERSION \
    && nvm alias default $NODE_VERSION \
    && nvm use default \
    && npm install -g npm@9.3.1

ENV PATH="/usr/local/nvm/versions/node/v18.0.0/bin:$PATH"
RUN npm install
RUN npm update
RUN npx mix

#Configure python requirements for data collection job
WORKDIR /var/www/laravel/app/external-data-collection
RUN python3 -m venv ./venv
RUN source ./venv/bin/activate && pip install -r requirements.txt 

WORKDIR /var/www/laravel
USER www-data

# Expose port 9000 and start php-fpm server
EXPOSE 9000
CMD ["/wrapper.sh"]

